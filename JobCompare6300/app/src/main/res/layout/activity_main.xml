<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/CurrentJobID"
        android:layout_width="285dp"
        android:layout_height="85dp"
        android:layout_marginTop="150dp"
        android:text="Current Job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/JobOffersID"
        android:layout_width="285dp"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:text="Job Offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CurrentJobID" />

    <Button
        android:id="@+id/ComparisonSettingsID"
        android:layout_width="285dp"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:text="Comparison Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JobOffersID" />

    <Button
        android:id="@+id/CompareJobsID"
        android:layout_width="285dp"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:text="Compare Jobs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ComparisonSettingsID" />


</androidx.constraintlayout.widget.ConstraintLayout>