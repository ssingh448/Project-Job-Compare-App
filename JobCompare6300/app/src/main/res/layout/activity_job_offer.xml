<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobOfferActivity">

    <TextView
        android:id="@+id/textViewJobOffer"
        android:layout_width="412dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:background="#6200ED"
        android:text="Job Offer"
        android:textAlignment="center"
        android:textColor="#E3E3E3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/JobOffertitleID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="70dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Title"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/JobOfferCompanyID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Company"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOffertitleID"
        app:layout_constraintStart_toStartOf="@+id/JobOffertitleID"
        app:layout_constraintTop_toBottomOf="@+id/JobOffertitleID" />

    <TextView
        android:id="@+id/JobOfferlocationID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Location"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferCompanyID"
        app:layout_constraintStart_toStartOf="@+id/JobOfferCompanyID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferCompanyID" />

    <TextView
        android:id="@+id/JobOfferysalaryID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Yearly Salary"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferlocationID"
        app:layout_constraintStart_toStartOf="@+id/JobOfferlocationID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferlocationID" />

    <TextView
        android:id="@+id/JobOfferybonusID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Yearly Bonus"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferysalaryID"
        app:layout_constraintStart_toStartOf="@+id/JobOfferysalaryID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferysalaryID" />

    <TextView
        android:id="@+id/JobOfferleaveID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Leave Time"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferybonusID"
        app:layout_constraintStart_toStartOf="@+id/JobOfferybonusID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferybonusID" />

    <TextView
        android:id="@+id/JobOfferstockID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Stock Options"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferleaveID"
        app:layout_constraintStart_toStartOf="@+id/JobOfferleaveID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferleaveID" />

    <TextView
        android:id="@+id/JobOfferhomeFundID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Home Buying Program Fund"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferstockID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/JobOfferstockID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferstockID" />

    <TextView
        android:id="@+id/JobOfferwellnessFundID"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#CDDC39"
        android:includeFontPadding="true"
        android:paddingStart="5dp"
        android:text="Wellness Fund"
        android:textAlignment="inherit"
        android:textColor="#1B255C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="@+id/JobOfferhomeFundID"
        app:layout_constraintStart_toStartOf="@+id/JobOfferhomeFundID"
        app:layout_constraintTop_toBottomOf="@+id/JobOfferhomeFundID" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="176dp" />

    <EditText
        android:id="@+id/editJobOffertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOffertitleID" />

    <EditText
        android:id="@+id/editJobOfferComapny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferCompanyID" />

    <EditText
        android:id="@+id/editJobOfferLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="200"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferlocationID" />

    <EditText
        android:id="@+id/editJobOfferysalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferysalaryID" />

    <EditText
        android:id="@+id/editJobOfferybonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferybonusID" />

    <EditText
        android:id="@+id/editJobOfferleave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferleaveID" />

    <EditText
        android:id="@+id/editJobOfferstock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferstockID" />

    <EditText
        android:id="@+id/editJobOfferhomeFund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferhomeFundID" />

    <EditText
        android:id="@+id/editJobOfferwellnessFund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/JobOfferwellnessFundID" />

    <Button
        android:id="@+id/JobOffersaveID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/JobOfferaddID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/JobOfferaddID"
        app:layout_constraintTop_toTopOf="@+id/JobOfferaddID" />

    <Button
        android:id="@+id/JobOfferaddID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Another"
        app:layout_constraintBottom_toBottomOf="@+id/JobOfferbackID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/JobOfferbackID" />

    <Button
        android:id="@+id/JobOfferbackID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/JobOfferaddID"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/JobOffercomparID"
        android:layout_width="315dp"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:text="Compare with Current Job"
        app:layout_constraintBottom_toTopOf="@+id/JobOfferbackID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>